---
import Whatsapp from "../components/Icons/WhatsappIcon.astro";
import Facebook from "../components/Icons/FacebookIcon.astro";
import Instagram from "../components/Icons/InstagramIcon.astro";
import Tiktok from "../components/Icons/TiktokIcon.astro";
---

<footer id="contact" class="px-5 mt-20 bg-purple-900">
  <h1
    class="max-w-screen-lg mx-auto text-xl sm:text-2xl font-extrabold text-white text-center pt-10 px-5"
  >
    Comunicate y sigueme en mis redes sociales
  </h1>
  <ul class="flex item-center justify-center gap-5 py-5">
    <li>
      <a
        href="https://api.whatsapp.com/send?phone=584242168660"
        target="_blank"
      >
        <Whatsapp />
      </a>
    </li>
    <li>
      <a href="https://www.facebook.com/Ractortattoo/" target="_blank">
        <Facebook />
      </a>
    </li>
    <li>
      <a href="https://instagram.com/ractortattoo" target="_blank">
        <Instagram />
      </a>
    </li>
    <li>
      <a href="https://www.tiktok.com/@raynel_tattoo" target="_blank">
        <Tiktok />
      </a>
    </li>
  </ul>

  <iframe
    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3923.114186550424!2d-66.8713502!3d10.491663999999998!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8c2a5927c56b8b59%3A0xf837011c6d294b3c!2sRactorTattoo!5e0!3m2!1ses!2sve!4v1695522319774!5m2!1ses!2sve"
    class="invert contrast-75 w-full lg:w-3/4 mx-auto rounded-3xl"
    height="450"
    allowfullscreen=""
    loading="lazy"
    referrerpolicy="no-referrer-when-downgrade"></iframe>
</footer>
